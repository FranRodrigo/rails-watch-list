<h2><%= @list.name %></h2>

<% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <p><%= movie.title %></p>
  <p><%= bookmark.comment %></p>


      <%= link_to "Delete",
          list_bookmark_path(bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
<% end %>


